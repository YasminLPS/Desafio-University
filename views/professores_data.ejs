  $(document).ready(function () {

    load_data();

    function load_data() {
      $.ajax({
        url: "http://localhost:3000/professores_data/action",
        method: "GET",
        dataType: "JSON",
        success: (data) => {
          var html = '';
          if (data.data.length > 0) {
            for (var count = 0; count < data.data.length; count++) {
              html += `
                            <tr>
                                <td scope="row">`+ data.data[count].nome + `</td>
                                <td scope="row">`+ data.data[count].bday + `</td>
                                <td scope="row">&#36; `+ data.data[count].salary + `</td>
                                <td scope="row">`+ data.data[count].diciplinaId + `</td>
                                <td class="bColuna"><button class="bExlcuir bx bx-pen edit" style="height: 30px;" data-id="`+data.data[count].id+`"></button></td>
                                <td class="bColuna"><button class="bExlcuir delete" data-id="`+data.data[count].id+`">X</button></td>
                            </tr>
                            `;
            }
          }
          $('#professores_data tbody').html(html);
        }
      });
    }

    $('#add_data').click(function () {
      $('#modal_title').text('Cadastro de Professores');
      $('#professores_form')[0].reset(); 
      $('#action_modal').modal('show');
    });
    $('#professores_form').on('submit', function (event) {
      event.preventDefault();
      $.ajax({
        url: "http://localhost:3000/professores_data/action",
        method: "POST",
        data: $('#professores_form').serialize(),
        dataType: "json",
        beforeSend: function () {
          $('#action_button').attr('disabled', 'disabled');
        },
        success: (data) => {
          $('#action_button').attr('disabled', false);
          $('#message').html('<div class="alert alert-success" role="alert">' + data.message + '</div>');
          $('#action_modal').modal('hide');
          load_data();
          setTimeout(function () {
            $('#message').html('');
          }, 5000);
        }

      })
    });
    
    $(document).on('click', '.edit', function(){
      var id = $(this).data('id');
      $('#modal_title').text('Editar Professor');
      $('#action_button').text('Salvar');
      $('#action_modal').modal('show');

      $.ajax({
        url:"http://localhost:3000/professores_data/action",
        method: "POST",
        data:{id:id},
        dataType: "JSON",
        success:(data) => {
          $('#nome').val(data.nome);
          $('#bday').val(data.bday);
          $('#matricula').val(data.salary);
          $('#cursos').val(data.diciplinaId);
          $('#id').val(data.id);
        }
      })
    });
  
    $(document).on('click', '.delete', function(){
      var id = $(this).data('id');
      if(confirm("Tem certeza que deseja excluir?")){
        $.ajax({
          url: "http://localhost:3000/professores_data/action",
          method: "DELETE",
          data:{id:id},
          dataType: "JSON",
          success:(data) => {
            $('#message').html('<div class="alert alert-success" role="alert">' + data.message + '</div>');
            load_data();
            setTimeout(function () {
            $('#message').html('');
          }, 5000);
          }

        })
      }
    });
  });

</script>